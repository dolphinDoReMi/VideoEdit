<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app data in cloud backup -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <include domain="file" path="." />
        
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="user_preferences.xml" />
        <exclude domain="database" path="user_data.db" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include app data in device transfer -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <include domain="file" path="." />
        
        <!-- Exclude temporary files -->
        <exclude domain="file" path="temp/" />
        <exclude domain="file" path="cache/" />
    </device-transfer>
</data-extraction-rules>