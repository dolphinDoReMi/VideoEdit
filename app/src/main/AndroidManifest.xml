<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions for video editing -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.WRITE_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    
    <!-- Camera permission for future video recording features -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Audio permissions for whisper.cpp ASR -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Notification permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Network permission for future cloud features -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- WebView permissions -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- Hardware features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />
    
    <!-- Screen size support -->
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name="com.mira.clip.Clip4ClipApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mira"
        android:requestLegacyExternalStorage="true"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <!-- Main Activity -->
        <activity 
            android:name="com.mira.clip.Clip4ClipActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Mira">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- File association for video files -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" android:scheme="file" />
            </intent-filter>
        </activity>
        
        <!-- Video Processing Service - Dedicated CLIP4Clip video processing -->
        <service
            android:name=".VideoProcessingService"
            android:enabled="true"
            android:exported="true"
            android:process=":video_processing" />
        
        <!-- Video Whisper Service - Background whisper.cpp processing -->
        <service 
            android:name=".whisper.VideoWhisperService"
            android:enabled="true"
            android:exported="false" />
        
        <!-- Mic Service - Foreground microphone service for real-time ASR -->
        <service
            android:name=".whisper.MicService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone" />
        
        <!-- Exported: to allow explicit ADB or cross-app triggers for e2e -->
        <receiver
            android:name=".orch.OrchestrationReceiver"
            android:exported="true">
          <intent-filter>
            <action android:name="com.mira.clip.ORCHESTRATE"/>
            <action android:name="com.mira.clip.INGEST"/>
            <action android:name="com.mira.clip.SEARCH"/>
            <category android:name="android.intent.category.DEFAULT"/>
          </intent-filter>
        </receiver>
        
        <!-- Production CLIP receiver removed - class not available in app module -->
        <!-- The ClipReceiver is in the feature/clip module -->
        
        <!-- Debug Broadcast Receiver (debug builds only) -->
        <receiver
            android:name="com.mira.clip.ops.TestReceiver"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.mira.clip.INGEST_MANIFEST" />
                <action android:name="com.mira.clip.SEARCH_MANIFEST" />
                <action android:name="com.mira.clip.DEBUG_LOG" />
                <action android:name="com.mira.clip.CLEAR_CACHE" />
                <action android:name="com.mira.clip.SELFTEST_TEXT" />
                <action android:name="com.mira.clip.SELFTEST_VIDEO" />
                <!-- New verification actions -->
                <action android:name="com.mira.videoeditor.debug.CLIP.RUN" />
                <action android:name="com.mira.videoeditor.debug.VERIFY_REPRESENTATION" />
                <action android:name="com.mira.videoeditor.debug.VERIFY_RETRIEVAL" />
                <action android:name="com.mira.videoeditor.debug.VERIFY_REPRODUCIBILITY" />
            </intent-filter>
        </receiver>
        
        <!-- File Provider for sharing exported videos -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- Xiaomi Store metadata -->
        <meta-data android:name="xiaomi_app_id" android:value="${xiaomi_app_id}" />
        <meta-data android:name="xiaomi_app_key" android:value="your_xiaomi_app_key" />
        
    </application>
</manifest>
