<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions for video editing -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.WRITE_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    
    <!-- Camera permission for future video recording features -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Audio permissions for whisper.cpp ASR -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Network permission for future cloud features -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- WebView permissions -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Hardware features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />
    
    <!-- Screen size support -->
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name=".AutoCutApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mira"
        android:requestLegacyExternalStorage="true"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <!-- Main Activity -->
        <activity 
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Mira">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- File association for video files -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
            </intent-filter>
        </activity>
        
        <!-- CLIP4Clip Test Activity - Video-Text Retrieval Testing -->
        <activity 
            android:name=".Clip4ClipTestActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Mira"
            android:label="CLIP4Clip Test" />
        
        <!-- Whisper Service Test Activity - VideoWhisperService Testing -->
        <activity 
            android:name=".WhisperServiceTestActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Mira"
            android:label="WhisperService Test" />
        
        <!-- Video Transcription Test Activity - WhisperEngine Testing -->
        <activity 
            android:name=".SimpleVideoTranscriptionTestActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Mira"
            android:label="Video Transcription Test" />
        
        <!-- CLIP4Clip Room Demo Activity - Production Room Database Integration -->
        <activity 
            android:name=".Clip4ClipRoomDemoActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Mira"
            android:label="CLIP4Clip Room Demo" />
        
        <!-- Video Processing Service - Dedicated CLIP4Clip video processing -->
        <service
            android:name=".VideoProcessingService"
            android:enabled="true"
            android:exported="true"
            android:process=":video_processing" />
        
        <!-- Video Whisper Service - Background whisper.cpp processing -->
        <service 
            android:name=".whisper.VideoWhisperService"
            android:enabled="true"
            android:exported="false" />
        
        <!-- Mic Service - Foreground microphone service for real-time ASR -->
        <service
            android:name=".whisper.MicService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone" />
        
        <!-- File Provider for sharing exported videos -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- Xiaomi Store metadata -->
        <meta-data android:name="xiaomi_app_id" android:value="${xiaomi_app_id}" />
        <meta-data android:name="xiaomi_app_key" android:value="your_xiaomi_app_key" />
        
    </application>
</manifest>
